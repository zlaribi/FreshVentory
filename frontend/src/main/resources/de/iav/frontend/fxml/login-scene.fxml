<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="720.0" prefWidth="1280.0" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.iav.frontend.controller.LoginController">
    <children>
        <Label text="Welcome to FreshVentory!" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="25.0" top="25.0"/>
            </VBox.margin>
        </Label>
        <Label text="Email"/>
        <TextField fx:id="emailField" />
        <Label text="Password" />
        <PasswordField fx:id="passwordField" />
        <Button fx:id="loginButton" onAction="#switchToMainScene" text="Login">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
    </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="10.0" />
   </padding>
</VBox>
